
@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        #payment {
            background-image: url('../../Images/Water-wallpaper-12.jpg');
            /*opacity:0.1;*/
            border-radius:5px;
        }
        @@media only screen and (min-width:960px) {
            #img {
                width: 120px;
                height: 120px;
                position: absolute;
                margin-left: 140px;
                margin-top: 30px;
            }

            #h1 {
                text-align: center;
                color: white;
            }

            #p {
                text-align: center;
                color: white
            }
        }

        @@media only screen and (min-width:769px) and (max-width:959px) {
            #img {
                width: 80px;
                height: 80px;
                position: absolute;
                margin-left: 100px;
                margin-top: 50px;
            }

            #h1 {
                text-align: center;
                font-size: 50px;
                color: white;
            }

            #p {
                text-align: center;
                font-size: 25px;
                color: white
            }
        }

        @@media only screen and (max-width:768px) {
            #img {
                width: 80px;
                height: 80px;
                position: absolute;
                margin-left: 60px;
                margin-top: 56px;
                margin-bottom: 50px;
            }

            #h1 {
                text-align: center;
                font-size: 40px;
                color: white;
            }

            #p {
                text-align: center;
                font-size: 20px;
                color: white
            }
        }

    </style>
</head>

<body>
    <div id="payment" class="container" style="width:600px;height:400px;">
        <form method="post">
            <div class="container">
                <br /><br />
                <h2><b>Payment</b></h2><br /><br />
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="dues"><b>Dues</b></label>
                        <input type="text" class="form-control" id="dues" name="dues" placeholder="Dues">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="duestime"><b>Due Time</b></label>
                        <input type="date" class="form-control" name="duestime" id="duestime">
                    </div>
                </div>
                <div class="form-group">
                    <label for="tcno"><b>TC No</b></label>
                    <input type="text" class="form-control" id="TC No" name="tcno" placeholder="TC No">
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
    <div class="jumbotron jumbotron-fluid" id="jumbotron">
        <div style="background-color:black; height:180px;">
            <img src="/Images/12618.gif" alt="Alternate Text" id="img" />
            <h1 class="display-4 p-3" id="h1">Geforce GYM</h1>
            <p class="lead" id="p"><i>No pain no gain!</i></p>
        </div>
    </div>
</body>